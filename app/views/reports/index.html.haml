%h1= t('report_list')

%table
  %tr
    %th= t('date')
    %th= t('name')
    %th
    %th
    %th

  - @reports.each do |report|
    %tr
      %td= report.created_at
      %td= report.name
      %td= link_to t('show'), report
      %td= link_to t('edit'), edit_report_path(report)
      %td= link_to t('destroy'), report, :method => :delete, :data => { :confirm => t('sure') }

%br

= link_to t('new_report'), new_report_path
